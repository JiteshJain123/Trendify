<%- include('./partials/owner-header') %>

<div class="p-10 bg-gray-100 min-h-screen">
  <h2 class="text-3xl font-bold mb-6 text-gray-800">All Products</h2>
  
  <% if (products.length === 0) { %>
    <div class="bg-white p-6 rounded shadow text-center">
      <p class="text-gray-600 text-lg">No products created yet.</p>
      <a href="/owners/createProducts" class="inline-block mt-4 px-6 py-2 bg-blue-600 text-white font-semibold rounded hover:bg-blue-700 transition">Create a product now</a>
    </div>
  <% } else { %>
    <div class="flex flex-wrap gap-5">
      <% products.forEach(function(product) { %>
        <div class="relative w-60 bg-white rounded-lg shadow hover:shadow-lg transition duration-300 overflow-hidden">
          <% if (product.discount > 0) { %>
            <div class="absolute top-2 left-2 bg-red-500 text-white text-xs font-bold px-2 py-1 rounded">
              -<%= product.discount %>%
            </div>
          <% } %>
          <div class="w-full h-52 flex items-center justify-center bg-[<%= product.bgcolor %>]">
            <img class="h-[12rem]" src="data:image/jpeg;base64,<%= product.image.toString('base64') %>" alt="">
          </div>
          <div class="flex justify-between items-center bg-[<%= product.panelcolor %>] px-4 py-3 text-[<%= product.textcolor %>]">
            <div>
              <h3 class="text-sm font-semibold"><%= product.name %></h3>
              <div class="flex items-center gap-1">
                <% if (product.discount > 0) { %>
                  <span class="line-through text-xs">₹<%= product.price %></span>
                  <span class="text-green-600 text-sm font-bold">₹<%= Math.round(product.price * (1 - product.discount / 100)) %></span>
                <% } else { %>
                  <span class="text-sm font-bold">₹<%= product.price %></span>
                <% } %>
              </div>
            </div>
          </div>
          <div class="flex justify-between items-center px-4 py-2 bg-gray-50 border-t">
            <a href="/owners/products/edit/<%= product._id %>" class="text-blue-600 font-medium hover:underline">Edit</a>
            <a href="/owners/products/delete/<%= product._id %>" class="text-red-500 font-medium hover:underline confirm-delete">Delete</a>
          </div>
        </div>
      <% }) %>
    </div>
  <% } %>
</div>

<%- include('./partials/footer') %>

<script src="/javascripts/script.js"></script>
