<%- include('./partials/owner-header') %>

<div class="min-h-screen bg-gradient-to-br from-blue-100 to-purple-200 flex justify-center items-center py-10">
  <div class="bg-white shadow-xl rounded-2xl p-10 w-full max-w-lg">
    <h2 class="text-3xl font-bold text-center mb-6">My Account</h2>

    <div class="space-y-4 text-gray-700">
      <div class="flex justify-between border-b pb-2">
        <span class="font-semibold">Full Name:</span>
        <span><%= owner.fullname %></span>
      </div>
      <div class="flex justify-between border-b pb-2">
        <span class="font-semibold">Email:</span>
        <span><%= owner.email %></span>
      </div>
      <div class="flex justify-between border-b pb-2">
        <span class="font-semibold">GSTIN:</span>
        <% if (owner.gstin) { %>
          <span><%= owner.gstin %></span>
        <% } else { %>
          <span class="italic text-gray-400">Not provided</span>
        <% } %>
      </div>
    </div>

    <div class="mt-8 text-center flex flex-wrap justify-center gap-4">
      <a href="/owners/createProducts" class="inline-block bg-blue-500 hover:bg-blue-600 text-white px-6 py-3 rounded-full shadow transition transform hover:scale-105">Add New Product</a>
      <a href="/owners/admin" class="inline-block bg-green-500 hover:bg-green-600 text-white px-6 py-3 rounded-full shadow transition transform hover:scale-105">All Products</a>
      <a href="/logout" class="inline-block bg-red-500 hover:bg-red-600 text-white px-6 py-3 rounded-full shadow transition transform hover:scale-105">Logout</a>
    </div>
  </div>
</div>

<%- include('./partials/footer') %>
