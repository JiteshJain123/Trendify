<%- include('./partials/header') %>

<div
  class="w-full min-h-screen flex justify-center items-center bg-gradient-to-br from-blue-100 to-purple-200 py-10"
>
  <div class="w-full max-w-md bg-white p-8 rounded-xl shadow-xl">
    <h2 class="text-3xl mb-6 font-bold text-center text-gray-800">
      Owner Register
    </h2>
    <form action="/owners/create" method="POST" class="space-y-4">
      <input
        class="block w-full px-3 py-2 border rounded focus:outline-none focus:ring-2 focus:ring-blue-300"
        type="text"
        placeholder="Full Name"
        name="fullname"
        required
      />
      <input
        class="block w-full px-3 py-2 border rounded focus:outline-none focus:ring-2 focus:ring-blue-300"
        type="email"
        placeholder="Email"
        name="email"
        required
      />
      <input
        class="block w-full px-3 py-2 border rounded focus:outline-none focus:ring-2 focus:ring-blue-300"
        type="password"
        placeholder="Password"
        name="password"
        required
      />
      <input
        class="block w-full px-3 py-2 border rounded"
        type="text"
        placeholder="GSTIN Number"
        name="gstin"
        required
        pattern="^[0-9]{2}[A-Z]{5}[0-9]{4}[A-Z]{1}[1-9A-Z]{1}Z[0-9A-Z]{1}$"
        title="Enter valid 15-character GSTIN"
      />

      <button
        class="w-full bg-green-500 hover:bg-green-600 text-white py-2 rounded shadow transition transform hover:scale-105"
        type="submit"
      >
        Register
      </button>
    </form>
  </div>
</div>

<%- include('./partials/footer') %>
