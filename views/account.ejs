<%- include('./partials/header') %>

<div class="min-h-[80vh] bg-gradient-to-br from-blue-100 to-purple-200 flex justify-center items-center py-2 sm:py-4">
  <div class="bg-white shadow-xl rounded-xl px-6 py-6 sm:px-12 sm:py-10 w-full max-w-md sm:max-w-3xl">
    <h2 class="text-2xl sm:text-3xl font-bold text-center mb-4 text-gray-800">My Account</h2>

    <div class="grid gap-4 text-gray-700 text-sm sm:text-base">
      <div class="bg-gray-100 rounded-md p-4 flex justify-between items-center">
        <span class="font-semibold">Name</span>
        <span><%= user.fullname %></span>
      </div>
      <div class="bg-gray-100 rounded-md p-4 flex justify-between items-center">
        <span class="font-semibold">Email</span>
        <span><%= user.email %></span>
      </div>
    </div>

    <div class="mt-6 text-center flex flex-col sm:flex-row sm:justify-center sm:space-x-6 gap-3 sm:gap-0">
      <a href="/shop" class="bg-blue-500 hover:bg-blue-600 text-white px-6 py-2.5 rounded-full shadow transition hover:scale-105">Go to Shop</a>
      <a href="/logout" class="bg-red-500 hover:bg-red-600 text-white px-6 py-2.5 rounded-full shadow transition hover:scale-105">Logout</a>
    </div>
  </div>
</div>

<%- include('./partials/footer') %>
