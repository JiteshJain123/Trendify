<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= title %></title>
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body class="flex flex-col min-h-screen">

    <!-- Header -->
    <%- include('./partials/header') %>

    <!-- Main Content -->
    <main class="flex-grow">
      <!-- Auth Wrapper -->
      <div class="min-h-[calc(100vh-4rem)] flex items-center justify-center bg-gradient-to-tr from-indigo-100 to-blue-200 p-4">
        <div class="w-full max-w-4xl bg-white rounded-3xl shadow-2xl overflow-hidden grid md:grid-cols-2 transition-all duration-300">

          <!-- Left Banner / Info -->
          <div class="hidden md:flex flex-col justify-center items-center bg-gradient-to-br from-blue-600 to-indigo-700 text-white p-10">
            <h1 class="text-4xl font-bold mb-4">Welcome to Trendify</h1>
            <p class="text-lg text-center">Your stylish journey starts here. Join us and explore the trend!</p>
          </div>

          <!-- Right Form Section -->
          <div class="w-full p-10">
            <!-- Register Section -->
            <div id="registerSection">
              <h2 class="text-3xl font-bold text-gray-800 mb-4 text-center">Create Account</h2>
              <form action="/users/register" method="POST" autocomplete="off">
                <input type="text" name="fullname" placeholder="Full Name" required
                  class="w-full mb-4 px-5 py-4 bg-gray-100 border border-gray-300 rounded-xl" />

                <input type="email" name="email" placeholder="Email" required
                  class="w-full mb-4 px-5 py-4 bg-gray-100 border border-gray-300 rounded-xl" />

                <!-- Password with tooltip text box -->
                <div class="relative w-full mb-6 group">
                  <input
                    type="password"
                    name="password"
                    placeholder="Password"
                    required
                    class="w-full px-5 py-4 bg-gray-100 border border-gray-300 rounded-xl"
                  />
                  <p class="text-xs text-gray-600 mt-1 hidden group-hover:block">
                    Must be 8+ characters with one uppercase letter, one lowercase, and one special character.
                  </p>
                </div>

                <button type="submit"
                  class="w-full bg-blue-600 hover:bg-blue-700 text-white font-semibold py-3 rounded-xl text-lg transition-all duration-200">
                  Register
                </button>
              </form>
              <p class="text-sm text-gray-600 mt-4 text-center">
                Already have an account?
                <button onclick="toggleForm('login')" class="text-blue-600 hover:underline font-medium">Login here</button>
              </p>
            </div>

            <!-- Login Section -->
            <div id="loginSection" class="hidden">
              <h2 class="text-3xl font-bold text-gray-800 mb-4 text-center">Welcome Back</h2>
              <form action="/users/login" method="POST" autocomplete="off">
                <input type="email" name="email" placeholder="Email" required
                  class="w-full mb-4 px-5 py-4 bg-gray-100 border border-gray-300 rounded-xl" />
                <input type="password" name="password" placeholder="Password" required
                  class="w-full mb-6 px-5 py-4 bg-gray-100 border border-gray-300 rounded-xl" />
                <button type="submit"
                  class="w-full bg-blue-600 hover:bg-blue-700 text-white font-semibold py-3 rounded-xl text-lg transition-all duration-200">
                  Login
                </button>
              </form>
              <p class="text-sm text-gray-600 mt-4 text-center">
                Don't have an account?
                <button onclick="toggleForm('register')" class="text-blue-600 hover:underline font-medium">Register here</button>
              </p>
            </div>
          </div>
        </div>
      </div>
    </main>

    <!-- Footer -->
    <%- include('./partials/footer') %>

    <!-- Toggle Script -->
    <script>
      function toggleForm(view) {
        const register = document.getElementById('registerSection');
        const login = document.getElementById('loginSection');
        if (view === 'login') {
          register.classList.add('hidden');
          login.classList.remove('hidden');
        } else {
          login.classList.add('hidden');
          register.classList.remove('hidden');
        }
      }
    </script>
  </body>
</html>
