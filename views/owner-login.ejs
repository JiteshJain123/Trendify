<%- include('./partials/header') %>

<div class="w-full min-h-screen flex justify-center items-center bg-gray-100 py-10">
  <div class="w-full max-w-md bg-white p-8 rounded shadow-lg">
    <h2 class="text-2xl mb-4 font-bold text-center">Owner Login</h2>

    <div class="bg-blue-50 border border-blue-300 text-blue-700 p-3 rounded mb-4 text-sm">
      <strong>Demo Owner:</strong> demo@shop.com / Demouser@1234988
      <button
        onclick="fillDemo()"
        class="ml-2 px-3 py-1 bg-blue-500 text-white rounded hover:bg-blue-600 transition"
