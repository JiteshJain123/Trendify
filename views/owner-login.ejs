<%- include('./partials/header') %>

<!-- Main Content -->
<div class="flex items-center justify-center bg-gray-100 px-4 py-4 min-h-[80vh]">
  <div class="w-full max-w-md bg-white p-6 sm:p-8 rounded-xl shadow-lg min-h-[500px] flex flex-col justify-center">
    <h2 class="text-2xl sm:text-3xl mb-4 font-bold text-center">Owner Login</h2>

    <div class="bg-blue-50 border border-blue-300 text-blue-700 p-3 rounded mb-4 text-sm sm:text-base">
      <strong>Demo Owner:</strong> demo@shop.com / Demouser@1234988
      <button
        onclick="fillDemo()"
        class="ml-2 mt-2 sm:mt-0 px-3 py-1 bg-blue-500 text-white rounded hover:bg-blue-600 transition"
      >
        Autofill
      </button>
    </div>

    <form action="/owners/login" method="POST" class="flex flex-col flex-grow justify-center">
      <input id="email" class="block w-full mb-3 px-3 py-2 border rounded" type="email" placeholder="Email" name="email" required>
      <input id="password" class="block w-full mb-4 px-3 py-2 border rounded" type="password" placeholder="Password" name="password" required>
      <button class="w-full bg-green-500 text-white py-2 rounded hover:bg-green-600 transition">Login</button>
    </form>
  </div>
</div>

<script>
  function fillDemo() {
    document.getElementById('email').value = 'demo@shop.com';
    document.getElementById('password').value = 'Demouser@1234988';
  }
</script>

