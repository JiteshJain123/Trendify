<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= title %></title>

    <!-- Remix Icon -->
    <link
      href="https://cdn.jsdelivr.net/npm/remixicon@4.2.0/fonts/remixicon.css"
      rel="stylesheet"
    />

    <!-- Tailwind CSS -->
    <script src="https://cdn.tailwindcss.com"></script>

    <!-- Bootstrap CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />

    <!-- Custom Styles -->
    <link rel="stylesheet" href="/stylesheets/style.css" />
  </head>

  <body class="font-['helvetica_now_display']">
    <!-- Navbar -->
    <nav class="w-full bg-blue-300 px-5 py-3 flex justify-between items-center">
      <h3 class="text-xl font-bold">Trendify</h3>

      <% if (!hideHamburger) { %>
      <button id="menu-toggle" class="lg:hidden text-2xl">
        <i class="ri-menu-line"></i>
      </button>
      <% } %>

      <div id="menu" class="hidden lg:flex gap-6">
        <% if (typeof loggedIn !== 'undefined' && loggedIn) { %>
        <a class="font-bold" href="/shop">Shop</a>
        <a class="font-bold" href="/cart">Cart</a>
        <a class="font-bold" href="/account">My Account</a>
        <a class="text-red-500 font-extrabold" href="/logout">Logout</a>
        <% } %>
      </div>
    </nav>

    <% if (!hideHamburger) { %>
    <!-- Mobile Dropdown -->
    <div
      id="mobile-menu"
      class="lg:hidden hidden flex-col bg-blue-200 px-5 py-4 space-y-3"
    >
      <% if (typeof loggedIn !== 'undefined' && loggedIn) { %>
      <a class="block font-bold" href="/shop">Shop</a>
      <a class="block font-bold" href="/cart">Cart</a>
      <a class="block font-bold" href="/account">My Account</a>
      <a class="block text-red-500 font-extrabold" href="/logout">Logout</a>
      <% } %>
    </div>
    <% } %>

    <!-- Toast Container -->
    <div aria-live="polite" aria-atomic="true" class="position-relative z-50">
      <div
        id="toastContainer"
        class="toast-container position-fixed top-0 start-50 translate-middle-x p-3"
      ></div>
    </div>
    
    <!-- Flash Alerts -->
    <% if (success || error) { %>
    <div class="flex justify-center mt-4">
      <div class="w-[90%] md:w-[70%] lg:w-[50%]">
        <% if (success) { %>
        <div
          class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded relative"
          role="alert"
        >
          <strong class="font-bold">Success! </strong>
          <span class="block sm:inline"><%= success %></span>
        </div>
        <% } %> <% if (error) { %>
        <div
          class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative"
          role="alert"
        >
          <strong class="font-bold">Error! </strong>
          <span class="block sm:inline"><%= error %></span>
        </div>
        <% } %>
      </div>
    </div>
    <% } %>
    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    <% if (!hideHamburger) { %>
    <!-- Hamburger Script -->
    <script>
      const toggleBtn = document.getElementById("menu-toggle");
      const mobileMenu = document.getElementById("mobile-menu");
      toggleBtn.addEventListener("click", () => {
        mobileMenu.classList.toggle("hidden");
      });
    </script>
    <% } %>

    <!-- Toast Script -->
    <script>
      document.addEventListener("DOMContentLoaded", function () {
        const params = new URLSearchParams(window.location.search);
        const success = params.get("success");
        const error = params.get("error");
        const toastContainer = document.getElementById("toastContainer");

        function showToast(message, type = "success") {
          const bgColor = type === "success" ? "bg-success" : "bg-danger";
          const toast = document.createElement("div");
          toast.className = `toast align-items-center text-white ${bgColor} border-0 show mb-2`;
          toast.setAttribute("role", "alert");
          toast.innerHTML = `
            <div class="d-flex">
              <div class="toast-body">${message}</div>
              <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast"></button>
            </div>
          `;
          toastContainer.appendChild(toast);

          setTimeout(() => {
            toast.remove();
          }, 5000);
        }

        if (success === "registered")
          showToast("✅ Registered successfully!", "success");
        if (success === "loggedin")
          showToast("✅ Logged in successfully!", "success");
        if (success === "loggedout")
          showToast("✅ Logged out successfully!", "success");

        if (error === "loginrequired")
          showToast("⚠️ Please login first.", "error");
        if (error === "invalidcredentials")
          showToast("❌ Invalid email or password.", "error");
        if (error === "usernotfound") showToast("❌ User not found.", "error");
        if (error === "alreadyexists")
          showToast("⚠️ User already exists. Try logging in.", "error");
        if (error === "invalidtoken")
          showToast("⚠️ Invalid session. Please login again.", "error");
      });
    </script>
  </body>
</html>
